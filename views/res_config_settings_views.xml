<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.odoo_sat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath id="pos_connected_devices_section" position="inside">
                <div class="row">
                    <label string="SAT Key" for="pos_discount_product_id" class="col-lg-3 o_light_label"/>
                    <field name="pos_sat_key" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>